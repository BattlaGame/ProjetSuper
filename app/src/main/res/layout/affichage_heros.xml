<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0,1,2">

    <TableRow>
    <TextView
        android:id="@+id/titre_appli"
        android:gravity="center"
        android:text="@string/app_name"
        android:layout_span="2"
        android:paddingBottom="20dp">
    </TextView>
    </TableRow>

    <TableRow
        android:paddingBottom="20dp">
        <WebView
            android:id="@+id/image_perso"
            android:layout_height="350dp"
            android:layout_width="90dp">
        </WebView>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:id="@+id/nom">
                </TextView>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/nom_complet">
                </TextView>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/type">
                </TextView>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/race_genre">
                </TextView>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/editeur">
                </TextView>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/taille_poids">
                </TextView>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/travail">
                </TextView>
            </TableRow>

        </TableLayout>

    </TableRow>

    <TableRow
        android:paddingBottom="10dp">
        <TextView
            android:gravity="center"
            android:text="@string/intelligence">
        </TextView>
        <ProgressBar
            android:id="@+id/bar_intelligence"
            style="?android:attr/progressBarStyleHorizontal" />
    </TableRow>

    <TableRow
        android:paddingBottom="10dp">
        <TextView
            android:gravity="center"
            android:text="@string/force">
        </TextView>
        <ProgressBar
            android:id="@+id/bar_force"
            style="?android:attr/progressBarStyleHorizontal"/>
    </TableRow>

    <TableRow
        android:paddingBottom="10dp">
        <TextView
            android:gravity="center"
            android:text="@string/vitesse">
        </TextView>
        <ProgressBar
            android:id="@+id/bar_vitesse"
            style="?android:attr/progressBarStyleHorizontal"/>
    </TableRow>

    <TableRow
        android:paddingBottom="10dp">
        <TextView
            android:gravity="center"
            android:text="@string/durabilite">
        </TextView>
        <ProgressBar
            android:id="@+id/bar_durabilite"
            style="?android:attr/progressBarStyleHorizontal"/>
    </TableRow>

    <TableRow
        android:paddingBottom="10dp">
        <TextView
            android:gravity="center"
            android:text="@string/pouvoir">
        </TextView>
        <ProgressBar
            android:id="@+id/bar_pouvoir"
            style="?android:attr/progressBarStyleHorizontal" />
    </TableRow>

    <TableRow
        android:paddingBottom="10dp">
        <TextView
            android:gravity="center"
            android:text="@string/combat">
        </TextView>
        <ProgressBar
            android:id="@+id/bar_combat"
            style="?android:attr/progressBarStyleHorizontal"/>
    </TableRow>

    <Button
        android:onClick="update"
        android:text="update"/>

</TableLayout>